{% extends 'Main/index.html.twig' %}

{% block pages %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Add Record            
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Add Record</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <!-- Small boxes (Stat box) -->
            <div class="row">        
            </div>
            <!-- /.row -->
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-7 connectedSortable">                
                    <!-- quick email widget -->
                    <div class="box box-info" style="border-top-color: darkSlateGray !important;">
                        <div class="box-header">
                            <i class="fa fa-users text-purple"></i>

                            <h3 class="box-title">Add Patient</h3>
                            <!-- tools box -->
                            <div class="pull-right box-tools">
                                <button type="button" class="btn btn-danger btn-sm" data-widget="remove" data-toggle="tooltip"
                                        title="Remove">
                                    <i class="fa fa-times"></i></button>
                            </div>
                            <!-- /. tools -->
                        </div>
                        <div class="box-body">
                            <form action="#" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control glowing-border" name="fName" placeholder="First Name" style="border-width: 0.5px;">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control glowing-border" name="mName" placeholder="Middle Name" style="border-width: 0.5px;">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control glowing-border" name="lName" placeholder="Last Name" style="border-width: 0.5px;">
                                </div>
                                <div class="form-group">
                                    <select id="txtSex">
                                        <option value="0">Select Sex</option>
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                    </select>                                
                                </div>
                                <div class="form-group">
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control pull-right" id="datepicker" placeholder="Select Birthdate">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control glowing-border" name="age" id="txtAge" placeholder="Age" style="border-width: 0.5px;">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control glowing-border" name="nationality" id="txtNationality" placeholder="Nationality" style="border-width: 0.5px;">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control glowing-border" name="address" id="txtAddress" placeholder="Complete Address" style="border-width: 0.5px;">
                                </div>
                            </form>
                        </div>
                        <div class="box-footer clearfix">                                                
                            <button type="button" class="pull-right btn btn-default" id="cancelPatient">Cancel
                                <i class="glyphicon glyphicon-remove text-red"></i>
                            </button>                        
                            <button type="button" class="pull-right btn btn-default" id="savePatient">Save
                                <i class="fa fa-arrow-circle-right text-green"></i>
                            </button>
                        </div>                    
                    </div>

                </section>
                <!-- /.Left col -->
                <!-- right col (We are only adding the ID to make the widgets sortable)-->
                <section class="col-lg-5 connectedSortable">

                    <!-- Map box -->
                    <!-- /.box -->

                    <!-- solid sales graph -->          
                    <!-- /.box -->

                    <!-- Calendar -->          
                    <!-- /.box -->

                </section>
                <!-- right col -->
            </div>
            <!-- /.row (main row) -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}